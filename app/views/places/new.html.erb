<h1>New Place</h1>

<% if @current_user %>
  <%= form_with model: @place do |form| %>
    <div class="mb-3">
      <%= form.label "body", class: "form-label" %>
      <%= form.text_field "body", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label "uploaded_image", class: "form-label" %>
      <%= form.file_field "uploaded_image", accept: "image/png,image/jpg,image/jpeg", class: "form-control" %>
    </div>

    <%= form.submit "Create Place", class: "btn btn-primary" %>
  <% end %>
<% else %>
  You must first <a href="/sessions/new">login</a> to add a place.
<% end %>